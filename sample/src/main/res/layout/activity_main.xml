<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ir.beigirad.zigzagview.ZigzagView
        android:id="@+id/zigzag1"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        app:zigzagBackgroundColor="#FF8F00"
        app:zigzagElevation="8dp"
        app:zigzagHeight="7dp"
        app:zigzagPaddingContent="16dp"
        app:zigzagShadowAlpha="0.9"
        app:zigzagSides="bottom|right">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="ZigzagView"
            android:textColor="#000000"
            android:textSize="23sp" />
    </ir.beigirad.zigzagview.ZigzagView>

    <ir.beigirad.zigzagview.ZigzagView
        android:id="@+id/zigzag2"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        app:zigzagBackgroundColor="#0277BD"
        app:zigzagElevation="16dp"
        app:zigzagHeight="12dp"
        app:zigzagPaddingContent="16dp"
        app:zigzagShadowAlpha="1"
        app:zigzagSides="top|bottom|left|right">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ZigzagView"
                android:textColor="#000000"
                android:textSize="23sp" />

        </LinearLayout>
    </ir.beigirad.zigzagview.ZigzagView>

    <Button
        android:id="@+id/btn_randomize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Change Background" />

</LinearLayout>
